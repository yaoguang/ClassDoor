<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <RelativeLayout
        android:id="@+id/title_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_title_height"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingTop="0dp"
            android:text="@string/home_pager_title"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/activity_title_textsize" />

        <ImageView
            android:id="@+id/left_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_title_height"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:src="@drawable/iconfont_back" />

        <ImageView
            android:id="@+id/right_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_title_height"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:src="@drawable/iconfont_plus"
            android:visibility="gone" />
    </RelativeLayout>

    <com.jshs.mobile.banmen.UIComponents.LineView
        android:id="@+id/title_divide"
        android:layout_width="match_parent"
        android:layout_height="1px" />
</LinearLayout>