<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_item" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="15dp">

                <com.facebook.drawee.view.SimpleDraweeView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:scaleType="fitCenter"
                    app:placeholderImage="@drawable/repair_house"
                    app:roundAsCircle="true" />

                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/icon"
                    android:singleLine="true"
                    android:text="Vjidsiahhh"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/default_my_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cutting_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_menu_item_height"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="所在地："
                    android:textColor="@color/default_text_light_color"
                    android:textSize="@dimen/default_my_text_size" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="四川成都"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/default_my_text_size" />

            </LinearLayout>

            <com.jshs.mobile.banmen.UIComponents.LineView
                android:layout_width="match_parent"
                android:layout_height="1px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_menu_item_height"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="入住时间："
                    android:textColor="@color/default_text_light_color"
                    android:textSize="@dimen/default_my_text_size" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="2016.3.28"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/default_my_text_size" />

            </LinearLayout>

            <com.jshs.mobile.banmen.UIComponents.LineView
                android:layout_width="match_parent"
                android:layout_height="1px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_menu_item_height"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="联络人："
                    android:textColor="@color/default_text_light_color"
                    android:textSize="@dimen/default_my_text_size" />

                <TextView
                    android:id="@+id/linkman"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="张正"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/default_my_text_size" />

            </LinearLayout>

            <com.jshs.mobile.banmen.UIComponents.LineView
                android:layout_width="match_parent"
                android:layout_height="1px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_menu_item_height"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="服务电话："
                    android:textColor="@color/default_text_light_color"
                    android:textSize="@dimen/default_my_text_size" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="15646777363"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/default_my_text_size" />

            </LinearLayout>

            <com.jshs.mobile.banmen.UIComponents.LineView
                android:layout_width="match_parent"
                android:layout_height="1px" />

            <TextView
                android:id="@+id/add_by_same_friend"
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_menu_item_height"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:drawableRight="@drawable/iconfont_right"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:text="通过好友认识他"
                android:textColor="@color/default_text_color"
                android:textSize="@dimen/default_my_text_size"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/same_friend_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="2个共同好友"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/default_my_text_size" />

                <com.jshs.mobile.banmen.UIComponents.LineView
                    android:layout_width="match_parent"
                    android:layout_height="1px" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/same_friend_icon_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toLeftOf="@+id/right_tag"
                        android:gravity="center_vertical"
                        android:orientation="vertical"></LinearLayout>

                    <ImageView
                        android:id="@+id/right_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/iconfont_right" />
                </RelativeLayout>

            </LinearLayout>

            <com.jshs.mobile.banmen.UIComponents.LineView
                android:layout_width="match_parent"
                android:layout_height="1px" />

            <TextView
                android:id="@+id/friend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/soild_arc_red_button"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="加为好友"
                android:textColor="@color/white"
                android:textSize="@dimen/default_my_text_size" />

            <TextView
                android:id="@+id/speak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/soild_frame_arc_white"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="发起对话"
                android:textColor="@color/default_text_color"
                android:textSize="@dimen/default_my_text_size" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>