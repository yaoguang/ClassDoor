<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp">


        <com.facebook.drawee.view.SimpleDraweeView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/head_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:placeholderImage="@drawable/repair_house"
            app:roundAsCircle="true" />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="85dp"
            android:singleLine="true"
            android:text="Vjidsiahhh"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/default_my_text_size" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cutting_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_menu_item_height"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="姓名："
            android:textColor="@color/default_text_light_color"
            android:textSize="@dimen/default_my_text_size" />

        <EditText
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="张正"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/default_my_text_size" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cutting_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_menu_item_height"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="性别："
            android:textColor="@color/default_text_light_color"
            android:textSize="@dimen/default_my_text_size" />

        <TextView
            android:id="@+id/sex_man"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/repair_house"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="男"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/default_my_text_size" />

        <TextView
            android:id="@+id/sex_woman"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/repair_house"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="女"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/default_my_text_size" />

        <TextView
            android:id="@+id/sex_privary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/repair_house"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="保密"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/default_my_text_size" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cutting_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_menu_item_height"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="生日："
            android:textColor="@color/default_text_light_color"
            android:textSize="@dimen/default_my_text_size" />

        <TextView
            android:id="@+id/birthday"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="1990.1.10"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/default_my_text_size" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cutting_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_menu_item_height"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="个性签名："
            android:textColor="@color/default_text_light_color"
            android:textSize="@dimen/default_my_text_size" />

        <EditText
            android:id="@+id/personalized_signature"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="暂无签名"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/default_my_text_size" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cutting_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_menu_item_height"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="联系电话："
            android:textColor="@color/default_text_light_color"
            android:textSize="@dimen/default_my_text_size" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="1323451325"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/default_my_text_size" />
    </LinearLayout>
</LinearLayout>