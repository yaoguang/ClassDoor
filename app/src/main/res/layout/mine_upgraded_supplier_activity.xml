<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp">

                <com.jshs.mobile.banmen.UIComponents.CircleImageView
                    android:id="@+id/icon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/repair_house" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="85dp"
                    android:singleLine="true"
                    android:text="九真建材"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/default_my_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cutting_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_menu_item_height"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="所在地："
                    android:textColor="@color/default_text_light_color"
                    android:textSize="@dimen/default_my_text_size" />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="四窜成都"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/default_my_text_size" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cutting_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_menu_item_height"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="入住时间："
                    android:textColor="@color/default_text_light_color"
                    android:textSize="@dimen/default_my_text_size" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="2016.03.06"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/default_my_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_menu_item_height"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="联络人："
                    android:textColor="@color/default_text_light_color"
                    android:textSize="@dimen/default_my_text_size" />

                <EditText
                    android:id="@+id/linkman"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="张政"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/default_my_text_size" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cutting_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_menu_item_height"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="服务电话："
                    android:textColor="@color/default_text_light_color"
                    android:textSize="@dimen/default_my_text_size" />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="1300000000"
                    android:textColor="@color/default_text_color"
                    android:textSize="@dimen/default_my_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_menu_item_height"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="选择文件"
                    android:textColor="@color/default_text_light_color"
                    android:textSize="@dimen/default_my_text_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cutting_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/my_menu_item_height"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="服务类型"
                    android:textColor="@color/default_text_light_color"
                    android:textSize="@dimen/default_my_text_size" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cutting_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/service_area_text"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/my_menu_item_height"
                    android:gravity="center_vertical"
                    android:text="服务范围"
                    android:textColor="@color/default_text_light_color"
                    android:textSize="@dimen/default_my_text_size" />

                <EditText
                    android:id="@+id/service_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/service_area_text"
                    android:layout_weight="1"
                    android:background="@drawable/frame_cuttingline"
                    android:gravity="start"
                    android:hint="多选"
                    android:lines="5"
                    android:padding="5dp"
                    android:textColor="@color/default_text_color"
                    android:textColorHint="@color/default_text_light_color"
                    android:textSize="13sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/cutting_line" />

            <TextView
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/soild_arc_red_button"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="@dimen/default_my_text_size" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>