<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FunctionPage.Home.HomeActivity">

    <LinearLayout
        android:id="@+id/home_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/title_back"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/home_bar_item1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/selt_draw_home_service"
            android:gravity="center"
            android:padding="2dp"
            android:text="服务"
            android:textColor="@color/default_text_middle_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/home_bar_item2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/selt_draw_home_picture"
            android:gravity="center"
            android:padding="2dp"
            android:text="图库"
            android:textColor="@color/default_text_middle_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/home_bar_item3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/selt_draw_home_im"
            android:gravity="center"
            android:padding="2dp"
            android:text="IM"
            android:textColor="@color/default_text_middle_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/home_bar_item4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/selt_draw_home_person"
            android:gravity="center"
            android:padding="2dp"
            android:text="牛人"
            android:textColor="@color/default_text_middle_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/home_bar_item5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/selt_draw_home_user"
            android:gravity="center"
            android:padding="2dp"
            android:text="我的"
            android:textColor="@color/default_text_middle_color"
            android:textSize="12sp" />
    </LinearLayout>

    <com.jshs.mobile.banmen.UIComponents.LineView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/home_bar_layout" />

    <android.support.v4.view.ViewPager
        android:id="@+id/home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/home_bar_layout" />
</RelativeLayout>
