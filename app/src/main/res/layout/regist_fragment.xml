<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/phone"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@drawable/repair_house"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:hint="手机号"
            android:inputType="phone"
            android:singleLine="true"
            android:textColor="@color/default_text_middle_color"
            android:textColorHint="@color/default_text_light_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/get_code"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/default_text_light_color"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="3dp"
        android:background="@color/cutting_line" />

    <EditText
        android:id="@+id/code"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@null"
        android:drawableLeft="@drawable/repair_house"
        android:drawablePadding="3dp"
        android:gravity="center_vertical"
        android:hint="验证码"
        android:inputType="number"
        android:singleLine="true"
        android:textColor="@color/default_text_middle_color"
        android:textColorHint="@color/default_text_light_color"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="3dp"
        android:background="@color/cutting_line" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@null"
        android:drawableLeft="@drawable/repair_house"
        android:drawablePadding="3dp"
        android:gravity="center_vertical"
        android:hint="密码"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="@color/default_text_middle_color"
        android:textColorHint="@color/default_text_light_color"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="3dp"
        android:background="@color/cutting_line" />

    <EditText
        android:id="@+id/affirm_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@null"
        android:drawableLeft="@drawable/repair_house"
        android:drawablePadding="3dp"
        android:gravity="center_vertical"
        android:hint="确认密码"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="@color/default_text_middle_color"
        android:textColorHint="@color/default_text_light_color"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="3dp"
        android:background="@color/cutting_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/check_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册即同意"
            android:textColor="@color/default_text_light_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班门用户协议"
            android:textColor="@color/default_text_middle_color"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/regist"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/frame_arc_cuttingline_25dp"
        android:gravity="center"
        android:text="立即注册"
        android:textColor="@color/default_text_middle_color"
        android:textSize="18sp" />

</LinearLayout>