<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_item" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="15dp">

        <com.facebook.drawee.view.SimpleDraweeView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            app:placeholderImage="@drawable/repair_house"
            app:roundAsCircle="true" />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/icon"
            android:singleLine="true"
            android:text="Vjidsiahhh"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/default_my_text_size" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/cutting_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_menu_item_height"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="所在地："
            android:textColor="@color/default_text_light_color"
            android:textSize="@dimen/default_my_text_size" />

        <TextView
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="四川成都"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/default_my_text_size" />

    </LinearLayout>

    <com.jshs.mobile.banmen.UIComponents.LineView
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_menu_item_height"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="入住时间："
            android:textColor="@color/default_text_light_color"
            android:textSize="@dimen/default_my_text_size" />

        <TextView
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="2016.3.28"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/default_my_text_size" />

    </LinearLayout>

    <com.jshs.mobile.banmen.UIComponents.LineView
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_menu_item_height"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="联络人："
            android:textColor="@color/default_text_light_color"
            android:textSize="@dimen/default_my_text_size" />

        <TextView
            android:id="@+id/linkman"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="张正"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/default_my_text_size" />

    </LinearLayout>

    <com.jshs.mobile.banmen.UIComponents.LineView
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_menu_item_height"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="服务电话："
            android:textColor="@color/default_text_light_color"
            android:textSize="@dimen/default_my_text_size" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="15646777363"
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/default_my_text_size" />

    </LinearLayout>

    <com.jshs.mobile.banmen.UIComponents.LineView
        android:layout_width="match_parent"
        android:layout_height="1px" />

</LinearLayout>